        </repository>
        <repository>
            <id>orbital</id>
            <url>https://repo.orbitalhq.com/release</url>
        </repository>

    </repositories>

    <distributionManagement>
        <repository>
            <id>repo.orbitalhq.com</id>
            <url>s3://repo.orbitalhq.com/release</url>
        </repository>
        <snapshotRepository>
            <id>repo.orbitalhq.com</id>
            <url>s3://repo.orbitalhq.com/snapshot</url>
        </snapshotRepository>
    </distributionManagement>

